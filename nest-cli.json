{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json",
    "watchOptions": {
      "ignored": [
        "**/node_modules/**",
        "**/dist/**",
        "**/.git/**",
        "**/coverage/**",
        "**/*.log"
      ]
    },
    "assets": [
      {
        "include": "database/sql/queries/**/*.sql",
        "outDir": "dist/"
      }
    ]
  }
}
